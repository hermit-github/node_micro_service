{
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "search.exclude": {
      "**/node_modules": true,
      "**/bower_components": true
    },
    "files.exclude": {
      "**/node_modules": true,
      "**/coverage": true,
      "**/*.sqlite3": true,
      "**/dist": true,
      "**/.git": true,
      "**/.svn": true,
      "**/.DS_Store": true,
      "**/*.js": {
        "when": "$(basename).ts"
      },
      "**/*.js.map": true
    },
    "[typescript]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    // "[prisma]": {
    //   "editor.defaultFormatter": "Prisma.prisma"
    // }
  }